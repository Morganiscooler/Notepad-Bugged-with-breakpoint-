<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns:viewmodel="clr-namespace:Notepad__easy_.ViewModel"
    x:DataType="viewmodel:MainViewModel"
    x:Class="Notepad__easy_.NotePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="NotePage">
    <VerticalStackLayout>
        <Button
            WidthRequest="150"
            CornerRadius="25"
            x:Name="HomePage"
            FontFamily="FluentIcons"
            FontSize="20"
            Text="Home"
            Clicked="BackHome"
            Command="{Binding AddCommand}" 
            ContentLayout="Left, 12"
            >
            <Button.ImageSource>
                <FontImageSource FontFamily="FluentIconsReal" Glyph="&#xe760;" Size="25"/>
            </Button.ImageSource>
        </Button>
        <ScrollView>
            <Entry
                x:Name="Notepad"
                HeightRequest="700"
                WidthRequest="1150" />
            <!--  FontSize="{Binding FontSizeChanged (add MVVM command here)}"  -->
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>