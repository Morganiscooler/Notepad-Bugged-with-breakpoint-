<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Notepad__easy_.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Notepad__easy_"
    Title="Notepad__easy_"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Welcome to Notepad! 📝"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Create New Note! 📝"
        ContentTemplate="{DataTemplate local:Create_NewNote}"
        Route="CreateNewNote" />

    <ShellContent
        Title="View Note! 📝"
        ContentTemplate="{DataTemplate local:NotePage}"
        Route="ViewNote" />

</Shell>
